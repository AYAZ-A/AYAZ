apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
spec:
  selector:
    matchLabels:
      app: nginx
  replicas: 2
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:1.14.2
            type: NodePort
            ports:
            - containerPort: 99
              targetPort: 80
              protocol: TCP
              name: http
            - port: 443
              protocol: TCP
              name: https
